@model List<TesisMarco.Models.FormularioCompuesto>


@{
    Layout = "_Layout";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<h4>Evidencias por formulario</h4>
<br />

@foreach (var formulario in Model)
{
    <div style="margin-bottom: 20px;">
        <h5><b>@formulario.Id</b> - Vigencia: @formulario.Vigencia.ToString("dd/MM/yyyy")</h5>

        @if (formulario.Evidencias != null && formulario.Evidencias.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Evidencia</th>
                        <th>Alerta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evidencia in formulario.Evidencias)
                    {
                        <tr>
                            <td>@evidencia.texto</td>
                            <td>@evidencia.alerta</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay evidencias disponibles para este formulario.</p>
        }
    </div>
}